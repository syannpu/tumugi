<% content_for(:title, 'マルシェ検索') %>

<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-12 py-20">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-blue-600 mb-4">
        🔍 マルシェ検索
      </h1>
      <p class="text-xl text-gray-600">お気に入りのマルシェを見つけよう</p>
    </div>
    
    <%= render 'search_form' %>
    
    <div class="container mx-auto px-2 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @marches.each do |marche| %>
          
          <!-- カード全体を囲むdiv -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            
            <!-- 画像エリア -->
            <div class="h-72 bg-gray-100 relative">
              <% if marche.images.present? %>
                <%= image_tag marche.images.first.url, class: "w-full h-72 object-cover" %>
              <% else %>
                <div class="bg-gray-200 w-full h-full flex items-center justify-center">
                  <div class="text-center text-gray-500">
                    <div class="text-4xl mb-2"></div>
                    <span>画像なし</span>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- コンテンツエリア -->
            <div class="p-4">
              <!-- タイトル -->
              <h3 class="text-lg font-semibold mb-2 text-gray-800">
                <%= link_to marche.title, marche_path(marche), class: "hover:text-blue-600 transition-colors" %>
              </h3>

               <% if marche.description.present? %>
                <p class="text-gray-600 text-sm mb-2">マルシェの魅力：
                  <%= truncate(marche.description, length: 100) %>
                </p>
              <% end %>
              
              <!-- 場所 -->
              <% if marche.location.present? %>
                <div class="flex items-center text-gray-600 text-sm mb-3">
                  <span class="mr-1">開催場所：</span>
                  <%= truncate(marche.venue, length: 100) %>
                </div>
              <% end %>

              <% if marche.held_at.present? %>
                <div class="flex items-center text-gray-600 text-sm mb-3">
                <span class="mr-1">開催日：</span>
              <%= marche.held_at.strftime("%Y年%m月%d日 %H:%M") %>
                </div>
              <% end %>

              <!-- 雰囲気タグ -->
              <% if marche.atmospheres.present? %>
                <div class="mb-2">
                  <span class="text-xs text-gray-500">雰囲気:</span>
                  <div class="flex flex-wrap gap-1 mt-1">
                    <% marche.atmospheres.each do |atmosphere| %>
                      <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                        <%= atmosphere.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- ターゲットタグ -->
              <% if marche.targets.present? %>
                <div class="mb-2">
                  <span class="text-xs text-gray-500">ターゲット:</span>
                  <div class="flex flex-wrap gap-1 mt-1">
                    <% marche.targets.each do |target| %>
                      <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">
                        <%= target.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- 価格帯タグ -->
              <% if marche.prices.present? %>
                <div class="mb-3">
                  <span class="text-xs text-gray-500">価格帯:</span>
                  <div class="flex flex-wrap gap-1 mt-1">
                    <% marche.prices.each do |price| %>
                      <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">
                        <%= price.name %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if marche.end_at.present? %>
                <div class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                <span class="mr-1">出店募集〆切：</span>
              <%= marche.end_at.strftime("%Y年%m月%d日 %H:%M") %>
                </div>
              <% end %>

              <!-- アクションボタン -->
              <div class="pt-3 border-t border-gray-100 mt-4">
                <%= link_to "詳細を見る", marche_path(marche), 
                    class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
              </div>
            </div>
          </div>
          
        <% end %>
      </div>
      
      <!-- 検索結果がない場合 -->
      <% if @marches.empty? %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">🔍</div>
          <h2 class="text-xl font-medium text-gray-600 mb-2">検索結果が見つかりませんでした</h2>
          <p class="text-gray-500">別のキーワードで検索してみてください</p>
        </div>
      <% end %>
    </div>
  </div>
</div>