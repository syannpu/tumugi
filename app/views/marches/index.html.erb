<div class="max-w-6xl mx-auto p-4">
  <h1 class="text-3xl font-bold text-center mb-8">投稿一覧</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @marches.each do |marche| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <!-- 画像エリア -->
        <div class="h-64 bg-gray-200 flex items-center justify-center">
          <% if post.image.present? %>
            <%= image_tag post.image, class: "w-full h-full object-cover" %>
          <% else %>
            <span class="text-gray-500">No Image</span>
          <% end %>
        </div>
        
        <!-- コンテンツエリア -->
        <div class="p-4">
          <h3 class="font-bold text-lg mb-2 truncate"><%= post.title %></h3>
          <p class="text-gray-600 text-sm line-clamp-3"><%= truncate(post.body, length: 100) %></p>
          
          <!-- 詳細リンク -->
          <div class="mt-4">
            <%= link_to "詳細を見る","#", 
                class: "text-blue-500 hover:text-blue-700 text-sm font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>