<div class="container mx-auto px-4">
  <!-- ヘッダー部分 -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-center mt-10"><%= @marche.title %></h1>
    <p class="text-gray-600 font-bold ">確定した出展者限定の情報ページです</p>
  </div>

  <!-- 3カラムレイアウト -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 h-150">
    <!-- 左：マルシェ詳細 -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-bold border-b border-gray-200 pb-4 mb-4">マルシェ詳細</h3>
      <div class="space-y-3">
        <p><strong>開催日:</strong> <%= @marche.start_at %></p>
        <p><strong>開催場所:</strong> <%= @marche.location %></p>
        <p><strong>詳細:</strong> <%= simple_format(@marche.body) %></p>
        <p><strong>確定した参加者</strong> (<%= @approved_participants.count %>名)</p>
      </div>
    </div>

    <!-- 真ん中：当日スケジュール -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-bold border-b border-gray-200 pb-4 mb-4">当日スケジュール</h3>
      <div class="space-y-3">
        <!-- スケジュール内容をここに追加 -->
        <p><%= simple_format(@marche.schedule) %></p>
      </div>
    </div>

    <!-- 右：画像アップロード -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-bold border-b border-gray-200 pb-4 mb-4">マルシェ配置</h3>
      <div class="space-y-3">
        <% if @marche.layout_image.present? %>
            <%= image_tag @marche.layout_image.url, class: "..." %>
        <% end %>
      </div>
    </div>
    
      <%= link_to "編集する", participants_info_edit_marche_path(@marche), 
        id: "button-edit-#{@marche.id}",
        class: "h-12 w-26 inline-flex items-center px-4 py-2 border border-orange-300 shadow-sm text-sm font-medium rounded-md text-orange-700 bg-white hover:bg-orange-200 focus:outline-none focus:ring-2 focus:ring-orange-400 transition-colors duration-200" %>
  </div>
</div>



