<div class="container mx-auto pt-20">
  <h1 class="text-2xl font-bold mb-6">マルシェ詳細</h1>
  <div class="mb-6">
  </div>
  <article class="bg-white rounded-lg shadow-md">
    <div class="p-6">
      <div class="md:flex md:space-x-6">
        <div class="md:w-1/4">
          <!-- 画像部分 -->
          <% if @marche.images.present? %>
            <% @marche.images.each do |image| %>
              <%= image_tag image.url, class: "w-full h-48 object-cover rounded-lg" %>
            <% end %>
          <% end %>
        </div>
        <div class="md:w-3/4">
          <!-- タイトルと本文部分 -->
          <h3 class="text-xl font-semibold mb-4"><%= @marche.title %></h3>
          <p class="text-gray-700"><%= simple_format(@marche.body) %></p>
          <p class="text-gray-700"><%= simple_format(@marche.location) %></p>
          <%= @marche.start_at.strftime("%Y年%m月%d日 %H:%M") %>
          <%= @marche.end_at.strftime("%Y年%m月%d日 %H:%M") %>
          <div class="atmospheres">
            <h4>キーワード</h4>
            <% @marche.atmospheres.each do |atmosphere| %>
              <span class="bg-orange-200 text-orange-600 px-3 py-1 rounded-full mr-2">
              <%= atmosphere.name %>
             </span>
            <% end %>
          </div>
          <div class="targets">
            <h4>ターゲット</h4>
            <% @marche.targets.each do |target| %>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full mr-2">
              <%= target.name %>
             </span>
            <% end %>
          </div>
          <div class="prices">
            <h4>価格帯</h4>
            <% @marche.prices.each do |price| %>
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full mr-2">
              <%= price.name %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- 編集・削除ボタン -->
      <div class="flex justify-end mt-6 space-x-3">
        <%= link_to "一覧に戻る", marches_path, class: "inline-flex items-center px-4 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200"%>
        <%= link_to "編集", edit_marche_path(@marche), 
        id: "button-edit-#{@marche.id}",
        class: "inline-flex items-center px-4 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200" %>
  
        <%= link_to "削除", marche_path(@marche), 
        id: "button-delete-#{@marche.id}",
        data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
        class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors duration-200" %>
     </div>
    </div>
  </article>
</div>