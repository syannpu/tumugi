  <h1 class="text-2xl font-bold text-left mt-12 ml-12">マルシェ詳細</h1>
<div class="container mx-auto flex justify-center items-start h-screen ">
  <article class="bg-white rounded-lg shadow-md w-280 h-200 ">
    <div class="p-6">
      <div class="md:flex md:space-x-6">
        <div class="md:w-1/4">
          <!-- 画像部分 -->
          <% if @marche.images.present? %>
            <% @marche.images.each do |image| %>
              <%= image_tag image.url, class: "w-full h-48 object-cover rounded-lg" %>
            <% end %>
          <% end %>
        </div>
        <div class="md:w-3/4">
          <!-- タイトルと本文部分 -->
            <h2 class="text-2xl font-semibold text-gray-600 mt-2 mb-8"><%= @marche.title %></h2>
            このマルシェの魅力：
          <div class="border border-gray-400 rounded-md p-4 mt-4 mb-2">
            <p class="text-base leading-relaxed text-gray-700"><%= simple_format(@marche.description) %></p>
          </div> 
          詳細：
          <div class="border border-gray-400 rounded-md p-12 mt-2 mb-2">
            <p class="text-gray-700"><%= simple_format(@marche.body) %></p>
          </div> 
            開催日：<%= @marche.held_at.strftime("%Y年%m月%d日 %H:%M") %>
          <p class="text-gray-700 mt-2 mb-2">開催場所：<%= @marche.location %></p>

          <div class="text-lg font-semibold text-gray-800 bg-orange-100 p-4 rounded">
            出店募集開始<%= @marche.start_at.strftime("%Y年%m月%d日 %H:%M") %>   ~   
            出店募集終了<%= @marche.end_at.strftime("%Y年%m月%d日 %H:%M") %>
          </div>
          <div class="atmospheres">
            <h4>キーワード</h4>
            <% @marche.atmospheres.each do |atmosphere| %>
              <span class="bg-orange-200 text-orange-600 px-3 py-1 rounded-full mr-2 ">
              <%= atmosphere.name %>
             </span>
            <% end %>
          </div>
          <div class="targets">
            <h4>ターゲット</h4>
            <% @marche.targets.each do |target| %>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full mr-2">
              <%= target.name %>
             </span>
            <% end %>
          </div>
          <div class="prices">
            <h4>価格帯</h4>
            <% @marche.prices.each do |price| %>
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full mr-2">
              <%= price.name %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- 編集・削除ボタン -->
      <div class="flex justify-center mb-6">
        <%= form_with url: mypage_join_marches_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :marche_id, value: @marche.id %>
        <%= f.submit "このマルシェに出品する", 
          data: { confirm: 'このマルシェに出品しますか？' },
          class: "inline-flex items-center justify-center px-4 py-2 border border-green-300 shadow-sm text-sm font-medium rounded-md text-green-700 bg-white hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-500 transition-colors duration-200 mt-6" %>
        <% end %>
      </div>
          <%= link_to "一覧に戻る", marches_path, class: "inline-flex items-center px-4 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors duration-200"%>
          
          <% if current_user == @marche.user %>

            <%= link_to "編集する", edit_marche_path(@marche), 
              id: "button-edit-#{@marche.id}",
              class: "inline-flex items-center px-4 py-2 border border-orange-300 shadow-sm text-sm font-medium rounded-md text-orange-700 bg-white hover:bg-orange-100 focus:outline-none focus:ring-2 focus:ring-orange-500 transition-colors duration-200" %>
  
            <%= link_to "削除", marche_path(@marche), 
              id: "button-delete-#{@marche.id}",
              data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
              class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-900 bg-white hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-600 transition-colors duration-200" %>
          <% end %>
     </div>
    </div>
  </article>
</div>