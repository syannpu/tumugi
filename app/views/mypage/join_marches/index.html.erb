<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-12 py-20">
    
    <!-- フラッシュメッセージの表示を追加 -->
    <% if flash[:success] %>
      <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        <%= flash[:success] %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <h1 class="text-2xl font-bold mb-6">出品申請マルシェ一覧</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% @joined_marches.each do |join_marche| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <!-- コンテンツ部分 -->
          <div class="p-6">
        <!-- マルシェタイトル -->
            <h3 class="text-xl font-bold text-gray-800 mb-4">
              <%= join_marche.marche.title %>
            </h3>

        <!-- 開催日 -->
            <p class="text-gray-600 text-sm mb-2">
              📅 開催日: <%= join_marche.marche.start_at&.strftime("%Y/%m/%d") || "未定" %>
            </p>

        <!-- 参加ステータス -->
            <p class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors text-center">
              <%= join_marche.approval_status_display %>
            </p>
            <% if join_marche.approval_status == "approved" %>
            <%= link_to "共有", participants_info_marche_path(join_marche.marche_id), class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
            <% end %>
            <div class="pt-3 border-t border-gray-100 mt-4">
              <%= link_to "詳細を見る", marche_path(join_marche.marche),
                  class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors text-center" %>
            
              <%= link_to "参加取り消し", mypage_join_marche_path(join_marche), 
                id: "button-delete-#{join_marche.id}",
                data: { turbo_method: :delete, turbo_confirm: "本当に参加申請を取り消しますか？" },
                class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors text-center" %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
    
    <h1 class="text-2xl font-bold mb-6">開催者マルシェ一覧</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">

        <% @created_marches.each do |marche| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        <!-- コンテンツ部分 -->
            <div class="p-10">
              <h3 class="text-xl font-bold text-gray-800 mb-4">
              <%= marche.title %>
              </h3>
      
            <!-- 開催者として必要な情報は何でしょうか？ -->
              <p>申請者数: <%= marche.join_marches.count %>件</p>
             <p>承認済み: <%= marche.join_marches.approved.count %>件</p>
      
              <div class="owner-actions">
                <%= link_to "申請管理", marche_join_marches_path(marche), 
                  class: "bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors text-center" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>