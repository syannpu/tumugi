<header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
  <nav class="container mx-auto px-6 py-4 flex items-center justify-between">
    <!-- ロゴ -->
    <%= link_to root_path, class: "text-xl font-bold text-gray-800" do %>
      つむぎマルシェ
    <% end %>

    <!-- ハンバーガーメニュー -->
    <button class="lg:hidden flex items-center text-gray-600 hover:text-gray-800" data-action="click->mobile-menu#toggle">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- メニュー項目 -->
    <div class="hidden lg:flex space-x-4" data-controller="mobile-menu" data-mobile-menu-target="menu">
      <%= link_to "ホーム", root_path, class: "text-gray-600 hover:text-gray-800 px-4 py-2" %>
    </div>
  </nav>
</header>